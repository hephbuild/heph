version: latest
build_files:
  ignore:
    - '**/test/e2e/roots'
  roots:
    go_backend:
      uri: file:///backend/go
    node_backend:
      uri: file:///backend/node

platforms:
  docker:
    provider: docker

go_backend:
  go: //:go|go
  gofmt: //:go|gofmt

node_backend:
  node: //:node
  yarn: //:yarn
